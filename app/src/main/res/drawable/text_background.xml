<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <stroke android:width="6dp" android:color="#FFCCCCCC" tools:ignore="StateListReachable" />

    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp" />

    <corners android:radius="8dp" />

    <gradient
        android:angle="270"
        android:startColor="#fffefe"
        android:centerColor="#d7d4d4"
        android:endColor="#9f9f9f"
        android:type="linear" />
</selector>